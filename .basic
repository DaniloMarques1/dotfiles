colorscheme green

let mapleader = " "

set autoindent
set autoread
set number

filetype indent on
set tabstop=4
set shiftwidth=4
set expandtab

set smartindent
set nobackup
set nowritebackup
set noswapfile
set guicursor=
set ls=0
set autochdir

noremap <C-s> :w<cr>
nnoremap <C-l> :noh<cr>
nnoremap <leader>q :bd!<cr>

autocmd FileType javascript,typescript setlocal shiftwidth=2 tabstop=2 expandtab
