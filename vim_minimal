let mapleader = " "

syntax on
set background=dark
colorscheme dark
set number
set incsearch
set shiftwidth=2
set tabstop=2
set softtabstop=2
set expandtab
set nobackup
set nowritebackup
set noswapfile
set smartindent
set clipboard=unnamedplus "use system clipboard by default

noremap :W :w
noremap <leader>t :terminal<cr>
noremap <leader>e :Explore<cr>
noremap <leader>l :bnext<cr>
noremap <leader>h :bprev<cr>
